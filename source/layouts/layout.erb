<!doctype html>
<html>
  <head>
    <title><%= current_page.data.title || "Currency for iOS" %></title>
    <!-- Technical Formating Meta Tags -->
    <meta http-equiv="content-type"     content="charset=utf-8">
    <meta http-equiv="content-language" content="en-us">
    <meta http-equiv="expires"          content="Wed, 31 Dec 2016 12:00:00 GMT">
    <!-- Authoring Meta Tags -->
    <meta name="author"    content="Nuno Coelho Santos">
    <meta name="publisher" content="Nuno Coelho Santos">
    <meta name="copyright" content="2016 by Nuno Coelho Santos">
    <meta name="host"      content="nunocoelhosantos.com">
    <meta name="generator" content="Sublime Text 3">
    <!-- Search Eengine and Browser Meta Tags -->
    <meta name="description"   content="A currency converter for iOS">
    <meta name="keywords"      content="currency, converter, ios, free">
    <meta name="revisit-after" content="14 days">
    <meta name="rating"        content="14 years">
    <!-- Browser Compability Meta Tags -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <!-- Open Graph Meta Tags (ogp.me) -->
    <meta property="og:image"            content="http://currency.nunocoelhosantos.com/images/open_graph_image.jpg">
    <meta property="og:title"            content="Currency for iOS">
    <meta property="og:description"      content="A currency converter for iOS that you will love. With beautiful typography, built-in calculator and over 160 currencies.">
    <meta property="og:type"             content="website">
    <meta property="og:url"              content="http://currency.nunocoelhosantos.com/">
    <meta property="og:locale"           content="en_US">
    <meta property="og:locale:alternate" content="zh_Hans">
    <meta property="og:locale:alternate" content="zh_Hant">
    <meta property="og:locale:alternate" content="es_ES">
    <meta property="og:locale:alternate" content="ja_JP">
    <meta property="og:locale:alternate" content="pt_PT">
    <meta property="fb:profile_id"       content="nunosans">
    <!-- Favicon Meta Tags (use both) -->
    <link rel="icon"          href="<%= image_path('favicon.ico') %>">
    <link rel="shortcut icon" href="<%= image_path('favicon.ico') %>">
    <!-- Apple iOS Meta Tags -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no">
    <!-- Stylesheets -->
    <%= stylesheet_link_tag "reset" %>
    <%= stylesheet_link_tag "all-3" %>
    <!-- Humans -->
    <link rel="author" href="/humans.txt">
  </head>
  <body>
    <%= yield %>

    <!-- Scripts -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js"></script>
    <%= javascript_include_tag  "all" %>
    <!-- Google Analytics -->
    <script>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');
      ga('create', 'UA-35923540-13', 'auto');
      ga('send', 'pageview');
    </script>
  </body>
</html>
